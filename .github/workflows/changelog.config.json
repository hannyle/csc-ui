{
  "base_branches": ["master"],
  "categories": [
    {
      "labels": ["major"],
      "title": "## âš ï¸ Breaking Changes"
    },
    {
      "labels": ["minor"],
      "title": "## ğŸš€ Features"
    },
    {
      "labels": ["patch"],
      "title": "## ğŸ› Fixes"
    },
    {
      "labels": ["test"],
      "title": "## ğŸ§ª Tests"
    },
    {
      "empty_content": "- no matching PRs",
      "exclude_labels": ["no-magic"],
      "exhaustive": true,
      "labels": ["test", "magic"],
      "rules": [
        {
          "flags": "gu",
          "on_property": "status",
          "pattern": "open"
        }
      ],
      "title": "## ğŸ§ª Tests and some ğŸª„ Magic"
    }
  ],
  "duplicate_filter": {
    "method": "match",
    "on_property": "title",
    "pattern": "\\[ABC-....\\]"
  },
  "empty_template": "- no changes",
  "exclude_merge_branches": ["Owner/qa"],
  "ignore_labels": ["skip-release", "ignore"],
  "label_extractor": [
    {
      "flags": "gu",
      "pattern": "(.) (.+)",
      "target": "$1"
    },
    {
      "method": "match",
      "on_property": "title",
      "pattern": "\\[Issue\\]"
    }
  ],
  "max_back_track_time_days": 365,
  "max_pull_requests": 200,
  "max_tags_to_fetch": 200,
  "pr_template": "- ${{TITLE}}\n   - PR: #${{NUMBER}}",
  "sort": {
    "on_property": "mergedAt",
    "order": "ASC"
  },
  "tag_resolver": {
    "filter": {
      "flags": "gu",
      "pattern": "api-(.+)"
    },
    "method": "semver"
  },
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
      "target": "- $4\n  - $6"
    }
  ],
  "trim_values": false
}
